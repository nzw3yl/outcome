<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, :id => 'signin_email' %>
  <%= f.label :password %>
  <%= f.password_field :password, :id => 'signin_password' %>
  <%= f.submit "Sign in", :class => "session_submit" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>
<% end %>
  <div id="shared_links">
<%= render :partial => "devise/shared/links" %></div>
